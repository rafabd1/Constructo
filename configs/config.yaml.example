# Example configuration for Constructo

llm:
  # Gemini API Key (Recommended). Get from Google AI Studio.
  # If commented out or empty, the agent will attempt to use Application Default Credentials (ADC).
  # See: https://cloud.google.com/docs/authentication/provide-credentials-adc
  api_key: "YOUR_GEMINI_API_KEY" 

  # Model name to use (e.g., gemini-1.5-flash, gemini-1.5-pro)
  model_name: "gemini-1.5-flash"

terminal:
  # Optional: Specify a default shell executable path.
  # If commented out or empty, the agent attempts to detect the default system shell.
  # default_shell: "/bin/bash" # Example for Linux/macOS
  # default_shell: "powershell.exe" # Example for Windows

log:
  # Optional: Set log level (e.g., debug, info, warn, error)
  # level: "info"

